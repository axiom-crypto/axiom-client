{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "lib": [
      "es2020",
      "es6"
    ],
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "paths": {
      "@axiom-crypto/circuit": ["../../common/temp/node_modules/@axiom-crypto/circuit"],
      "@axiom-crypto/client": ["./dist"],
      "@axiom-crypto/harness": ["../../common/temp/node_modules/@axiom-crypto/harness"],
      "@axiom-crypto/react": ["../../common/temp/node_modules/@axiom-crypto/react"],
      "@axiom-crypto/core": ["../../common/temp/node_modules/@axiom-crypto/core"],
      "@axiom-crypto/halo2-lib-js": ["../../common/temp/node_modules/@axiom-crypto/halo2-lib-js"],
      "@axiom-crypto/halo2-wasm": ["../../common/temp/node_modules/@axiom-crypto/halo2-wasm"],
      "@axiom-crypto/tools": ["../../common/temp/node_modules/@axiom-crypto/tools"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "scripts",
    "test",
    "src/scaffold/templates/*"
  ],
  "ts-node": {
    "esm": true
  }
}
