{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "lib": [
      "es2020",
      "es6"
    ],
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "paths": {
      "@axiom-crypto/circuit": ["../circuit/dist"],
      "@axiom-crypto/client": ["./dist"],
      "@axiom-crypto/harness": ["../harness/dist"],
      "@axiom-crypto/react": ["../react/dist"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "scripts",
    "test",
    "src/scaffold/templates/*"
  ],
  "ts-node": {
    "esm": true
  }
}
